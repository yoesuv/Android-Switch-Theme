<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SwitchTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Theme.SwitchTheme" parent="Base.Theme.SwitchTheme" />

    <style name="MySwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@drawable/selector_switch</item>
        <item name="trackTint">@drawable/selector_track_switch</item>
    </style>

    <!-- Begin style Dialog -->
    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.Rounded</item>
    </style>
    <style name="MaterialAlertDialog.Rounded" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialAlertDialog.Rounded</item>
    </style>

    <style name="ShapeAppearance.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">@dimen/corner_radius</item>
    </style>
    <!-- End style Dialog -->

</resources>